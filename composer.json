{
    "name": "atereshchuk/laravel-like-dislike",
    "description": "üëç User like/dislike features for Laravel Application.",
    "license": "MIT",
    "authors": [
        {
            "name": "atereshchuk",
            "email": "andrii@tereshch.uk"
        }
    ],
    "require": {
        "php": "^7.2|^8.0|^8.1|^8.2|^8.3",
        "laravel/framework": "^9.0|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "ATereshchuk\\LaravelLikeDislike\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^10.0.7",
        "orchestra/testbench": "^8.0",
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "brainmaestro/composer-git-hooks": "dev-master",
        "laravel/pint": "^1.2"
    },
    "extra": {
        "laravel": {
            "providers": [
                "ATereshchuk\\LaravelLikeDislike\\LikeServiceProvider"
            ]
        },
        "hooks": {
            "pre-commit": [
                "composer fix-style",
                "composer test"
            ],
            "post-merge": "composer install"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "cghooks update"
        ],
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "cghooks": "vendor/bin/cghooks",
        "check-style": "vendor/bin/pint --test",
        "fix-style": "vendor/bin/pint",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    }
}
